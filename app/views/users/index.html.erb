<p id="notice"></p>
<div class="container px-5 px-sm-0">
 <div class="row">

  <%= render 'books/list', user: @user, book: @book %>
   <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
     <table class="table">
      <thead>
       <tr>
        <td>image</td>
        <td>name</td>
        <td colspan="3"></td>
       </tr>
      </thead>
     <tbody>
      <% @users.each do |user| %>
       <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        <td>
         <div class="row">
          <%= link_to "Show", user_path(user.id) %>
         </div>
        </td>
       </tr>
      <% end %>
     </tbody>
    </table>
   </div>
 </div>
</div>