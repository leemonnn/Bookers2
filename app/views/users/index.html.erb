<h2>User info</h2>

<div>
  <h4>name</h4>
  <p><%= @user.name %></p>
  <h4>introduction</h4>
  
</div>
<%= link_to "Edit", edit_user_path(@user) %>

<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Users</h2>

<% @user.each do |user| %>
<div>

  <p>image：<%= user.profile_image %></p>
  <p>name：<%= user.name %></p>
</div>
<%= link_to "Show", user_path(@user) %>

<% end %>

