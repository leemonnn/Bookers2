<p id="notice"></p>
<div class="container">
 <div class="row">
  <% if @user.errors.any? %>
   <ul class="alert alert-danger" role="alert">
    <h6 class="alert-heading">
     <%= @user.errors.count %>errors prohibited this obj from being saved:
    </h6>
     <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
   </ul>
  <% end %>

  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>User info</h2>
    <form action="/users" method="patch" class="form-up">
     <%= form_with model: @user do |f| %>
      <div class="form-up"> 
       <label for="inputName">Name</label>
       <input type="text" class="form-control user_name" name="user-name" id="inputName">
      </div>
      <div class="form-up"> 
       <label for="inputImage">Image</label>
       <%= f.file_field :profile_image,  accept: "image/*" %>
      </div>
      <div class="form-up"> 
       <label for="inputIntroduction">Introduction</label>
       <input type="area" class="form-control user_introduction" name="user-introduction" id="inputIntroduction">
      </div>
      <div class="form-up"> 
       <button type="submit" class="btn btn-secondary">Update Book</button>
      </div>
     <% end %>
  </div>
 </div>
</div>
