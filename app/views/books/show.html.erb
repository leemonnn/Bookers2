<% if flash[:notice] %>
<p id="notice">
<%= flash[:notice] %>
</p>
<% end %>

<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<h2>Book detail</h2>
<div>
 <%= image_tag @book.user.get_profile_image(100,100) %>
<p><%= link_to @book.user.name, user_path(@book.id) %></p>
<p><%= link_to @book.title, book_path(@book.id) %></p>
<p><%= @book.body %></p>
</div>

<%= link_to "Edit", edit_book_path(@book) %>
<%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？"  %>

