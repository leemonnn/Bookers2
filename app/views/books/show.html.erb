<% if flash[:notice] %>
<p id="notice">
<%= flash[:notice] %>
</p>
<% end %>

<p id="notice"></p>
<div class="container">
 <div class="row">
  <%= render 'list', book: @book %>
   <div class="col-md-8">
    <h2>Book detail</h2>
     <table class="table">
      <tbody>
       <tr>
        <td><%= image_tag @book.user.get_profile_image(100,100) %><br>
            <%= link_to @book.user.name, user_path(@book.id) %></td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
         <td>
         <a class="btn btn-sm btn-success" href="edit">Edit</a>
         </td>
         <td>
         <a class="btn btn-sm btn-danger"  data-confirm= "本当に削除しますか？" href="book_path(@book), method: :delete">Destroy</a>
         </td>
        <% end %>
       </tr>
      </tbody>
     </table>
   </div>
 </div>
</div>