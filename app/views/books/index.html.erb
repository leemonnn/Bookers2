<p id="notice"></p>
<div class="container">
 <div class="row">
   
   
   <%= render 'list', book:@book,user:@user %>
   
  <div class="col-md-8">
   <h2>Books</h2>
    <table class="table tabli-hover table-inverse">
     <thead>
      <tr>
       <th colspan="2"></th>
       <th>Title</th>
       <th>Opinion</th>
      </tr>
     </thead>
     <tbody>
      <% @books. each do |book| %>
      <tr>
       <th scope="row">
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
       </th>
      </tr>
      <% end %>
     </tbody>
    </table>
  </div>
 </div>
</div>

