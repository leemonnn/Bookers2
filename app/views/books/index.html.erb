<h2>User info</h2>
<div>
  <%= image_tag @book.user.get_profile_image(100,100) %>
  <h4>name</h4>
  <p><%= @book.user.name %></p>
  <h4>introduction</h4>
  
</div>
<%= link_to "Edit", edit_user_path(@book.user) %>


<h2>New Book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<% @books.each do |books| %>
<div>
  <p>Title：<%= link_to books.title, book_path(books.id) %></p>
  <p>Opinion：<%= books.body %></p>
</div>
<% end %>

