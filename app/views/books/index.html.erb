<div class="container">
 <div class="row">
  <div class="col-md-4"style="background-color: orange;">
   <% if @book.errors.any? %>
    <ul class="alert alert-danger" role="alert">
     <h6 class="alert-heading">
      <%= @book.errors.count %>errors prohibited this obj from being saved:
     </h6>
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
    </ul>
   <% end %>
   
   <h2>User info</h2>
    <%= image_tag @book.user.get_profile_image(100,100) %>
     <table class="table">
      <tbody>
       <tr>
        <th>name</th>
        <th><%= @book.user.name %></th>
       </tr>
       <tr>
        <th>introduction</th>
        <th><%= @book.user.introduction %></th>
       </tr>
      </tbody>
     </table>
     <div class="row">
      <a class="btn btn-outline-secondary btn-block" href="/users/:id/edit" role="fas fa-user-cog">"fas fa-user-cog"</a>
     </div>
     
     
<h2>New Book</h2>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</div>

<div class="col-md-8">
 <h2>Books</h2>
  <% @books. each do |book| %>
  <div>
   <P><%= image_tag book.user.get_profile_image(100,100) %></p>
   <p>Title：<%= link_to book.title, book_path(book.id) %></p>
   <p>Opinion：<%= book.body %></p>
  </div>
  <% end %>
</div>
</div>
</div>
