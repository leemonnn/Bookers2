<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<% @books.each do |books| %>
<div>
  <p>Title：<%= link_to books.title, book_path(book.id) %></p>
  <p>Opinion：<%= books.body %></p>
</div>
<% end %>

