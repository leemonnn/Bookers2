<h2>User info</h2>
<div>
  <%= image_tag @book.user.get_profile_image(100,100) %>
  <h4>name</h4>
  <p><%= @book.user.name %></p>
  <h4>introduction</h4>
  <p><%= @book.user.introduction %></p>
</div>
<%= link_to "Edit", edit_user_path(@book.user) %>


<h2>New Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<% @books.each do |book| %>
<div>
  <P><%= image_tag book.user.get_profile_image(100,100) %></p>
  <p>Title：<%= link_to book.title, book_path(book.id) %></p>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>

