<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
 <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"本のタイトル" %>
  
 
 <label for="inputBody">Opinion</label>
  <%= f.text_area :body, autofocus: true, id:"inputbody", placeholder:"感想" %>
  
  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path %>