<p id="notice"></p>
<div class="container">
 <div class="row">

  <% if @book.errors.any? %>
   <ul class="alert alert-danger" role="alert">
    <h6 class="alert-heading">
     <%= @book.errors.count %>errors prohibited this obj from being saved:
    </h6>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
   </ul>
  <% end %>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h1>Editing Book</h1>
    <form action="/books" method="patch" class="form-up">
     <%= form_with model: @book do |f| %>
      <div class="form-up"> 
       <label for="inputTitle">Title</label>
       <input type="text" class="form-control book_title" name="book-title" id="inputTitle">
      </div>
      <div class="form-up">
       <label for="inputBody">Opinion</label>
       <input type="area"  class="form-control book_body" name="book-body" id="inputbody">
      </div>
      <div class="form-up">
       <button type="submit" class="btn btn-success">Update Book</button>
      </div>
     <% end %>
    </form>
    <%= link_to "Show", book_path(@book) %>
    <%= link_to "Back", books_path %>
  </div>
 </div>
</div>